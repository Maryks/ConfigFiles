{
    // workbench settings
    "workbench.colorTheme": "Coda Classic",
    // editor settings
    "editor.mouseWheelZoom": true,
    "editor.fontSize": 16,
    "editor.cursorBlinking": "expand",
    "editor.renderLineHighlight": "all",
    // color settings
    "editor.tokenColorCustomizations": {
        "[Coda Classic]": {
            "keywords": "#ff29c9",
            "functions": "#254bf5",
            "numbers": "#f89729",
            "textMateRules": [
                {
                    "scope": "string",
                    "settings": {
                        "fontStyle": "italic"
                    }
                }
            ]
        }
    },
    "workbench.colorCustomizations":{
        "editor.lineHighlightBackground": "#F8F8F8",
        "editor.lineHighlightBorder": "#C6C6C6",
        "editor.selectionHighlightBackground": "#f3c9a6"
    },
    // misc
    "julia.executablePath": "julia",
    "files.associations": {
        "*.pp": "pascal"
    },
    "julia.enableTelemetry": false,
}
